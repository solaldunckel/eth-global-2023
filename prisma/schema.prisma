generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model channel {
  id                Int               @id
  name              String            @db.VarChar(20)
  category          String            @db.VarChar(20)
  query             String            @db.VarChar(2500)
  query_description String            @db.VarChar(2500)
  allowed_address   allowed_address[]
  posts             posts[]
}

model users {
  address         String  @id @db.Char(42)
  username        String? @db.VarChar(50)
  profile_pic_url String? @db.VarChar(2083)
}

model allowed_address {
  channel_id Int
  address    String  @db.Char(42)
  channel    channel @relation(fields: [channel_id], references: [id])

  @@id([channel_id, address])
}

model posts {
  channel_id     Int
  topic_id       String @id @db.VarChar(100)
  author_address String @db.Char(42)

  channel channel @relation(fields: [channel_id], references: [id])
}
