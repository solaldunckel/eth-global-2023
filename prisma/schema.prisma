generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model allowedAddress {
  channel_id      Int
  allowed_address String @db.Char(42)

  @@id([channel_id, allowed_address])
}

model channel {
  id       Int    @id
  name     String @db.VarChar(20)
  category String @db.VarChar(20)
  query    String @db.VarChar(2500)
}

model threads {
  channel_id Int
  topic      String @id @db.VarChar(100)
}

model users {
  address         String  @id @db.Char(42)
  username        String? @db.VarChar(50)
  profile_pic_url String? @db.VarChar(2083)
}
